<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/scannerOverlay"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/scanner_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/scannerLine"
        android:layout_width="240dp"
        android:layout_height="2dp"
        android:background="#4CAF50"
        app:layout_constraintEnd_toEndOf="@id/scannerOverlay"
        app:layout_constraintStart_toStartOf="@id/scannerOverlay"
        app:layout_constraintTop_toTopOf="@id/scannerOverlay" />

</androidx.constraintlayout.widget.ConstraintLayout>